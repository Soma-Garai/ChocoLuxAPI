@* @model ChocoLuxAPI.Models.MailOrderConfirmation

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Order Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            text-align: center;
        }

        p {
            font-size: 14px;
            line-height: 1.5;
            margin: 10px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .total-price {
            font-weight: bold;
            font-size: 16px;
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            background-color: #4CAF50;
            color: #ffffff;
            border-radius: 5px;
            margin-top: 20px;
            display: block;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Order Confirmation</h2>

        <p>Thank you for your order! Your order details:</p>

        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
        <p><strong>Order Status:</strong> @Model.OrderStatus</p>

        @if (Model.PaymentStatus == "Cash On Delivery")
        {
            <p><strong>Payment Status:</strong> Pending</p>
        }
        else
        {
            <p><strong>Payment Status:</strong> Paid by @Model.PaymentStatus</p>
        }

        <h3>Order Items:</h3>
        @if (Model.OrderDetails != null && Model.OrderDetails.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@orderDetail.ProductName</td>
                            <td>@orderDetail.Quantity</td>
                            <td>@orderDetail.ProductPrice</td>
                            <td>@orderDetail.TotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items in this order.</p>
        }

        <p class="total-price"><strong>Total Price:</strong> @Model.TotalPrice</p>

        <a href="@Url.Action("Index", "Home")" class="btn">Keep Shopping</a>
    </div>
</body>
</html>

 *@